<%-include('nav')-%>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 border p-4" style="background-color: whitesmoke">
    <div>
      <center><h1>Create Account</h1></center>
    </div>

    <form>
      <label>Enter PIN</label>
      <input type="text" name="p" class="form-control" />
      <div class="row">
        <div class="col">
          <label>Enter Name</label>
          <input
            type="text"
            name="n"
            class="form-control"
           
          />
        </div>
        <div class="col">
          <label>Enter Lname</label>
          <input
            type="text"
            name="fn"
            class="form-control"
       
          />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label>Enter email</label>
          <input
            type="text"
            name="e"
            class="form-control"
          
          />
        </div>
        <div class="col">
          <label>Enter phone</label>
          <input
            type="text"
            name="phone"
            class="form-control"
           
          />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label>Enter Gender</label>
          <input
            type="text"
            name="g"
            class="form-control"
        
          />
        </div>
        <div class="col">
          <label> Enter Country</label>
          <input
            type="text"
            name="c"
            class="form-control"
      
          />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label> Enter State</label>
          <input
            type="text"
            name="s"
            class="form-control"
        
          />
        </div>
        <div class="col">
          <label> Enter City</label>
          <input
            type="text"
            name="city"
            class="form-control"
           
          />
        </div>
      </div>
      <label>Enter Amount</label>
      <input type="text" name="amt" class="form-control" />
      <button
        class="btn btn-success mt-5"
        name="submit"
        value="submit"
        type="submit"
      >
        Submit
      </button>
    </form>
   
    <center>
        <h3 class="text-center text-Danger mt-2">
       <%=msg%>
        </h3>
    </center>
  </div>
</div>
