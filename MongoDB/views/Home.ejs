<%-include('nav')-%>
<html>
    <body>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <table class="table table-striped table-responsive-md">
                    <a href="/addData" class="btn btn-success mb-2">Add Record</a>
                    <thead class="thead-dark">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Action</th>
                    </thead>
                        <tbody>
                            <tr> 
                            <%
                            dt.forEach(row =>{
                            %>
                            <tr>
                                <td><%=row.id%></td>
                                <td><%=row.name%></td>
                                <td><%=row.course%></td>
                                <td>
                                    <a href="/edit?upid=<%=row.id%>" class="btn btn-success">Edit</a>
                                    <a href="/delete?delid=<%=row.id%>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            <%})%>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>